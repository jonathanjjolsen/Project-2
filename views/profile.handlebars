<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-item-form">
      <div class="row">
        <div class="form-group input-field col s4">
          <label for="item-name">Item Name</label>
          <input id="item-name" type="text" class="validate" name="item-name">
        </div>
      </div>
      <div class="row">
        <div class="form-group input-field col s4">
          <label for="item-price">Price</label>
          <input id="item-price" type="number" class="validate" name="item-price">
        </div>
      </div>
      <div class="row">
        <div class="form-group input-field col s4">
          <label for="item-manufacturer">Manufacturer</label>
          <input id="item-manufacturer" type="text" class="validate" name="item-manufacturer">
        </div>
      </div>
      <div class="row">
        <div class="form-group input-field col s4">
          <label for="item-color">Color</label>
          <input id="item-color" type="text" class="validate" name="item-color">
        </div>
      </div>
      <div class="row">
        <div class="form-group input-field col s4">
          <label for="item-year">Year Manufactured</label>
          <input id="item-year" type="number" class="validate" name="item-year">
        </div>
      </div>
      <div class="form-group col s12">
        <label for="item-desc">Description:</label>
        <textarea class="form-input" id="item-desc" name="item-desc"></textarea>
      </div>
      <div class="row">
        <div class="form-group col s12">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </div>



