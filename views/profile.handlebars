    </form>
  </div>

  {{#if items.length}}
  <div class="col-md-6 items-list">
    <h3>My Posts:</h3>

    {{#each items as |item|}}
    <div class="row">
      <div class="col s12 m7">
        <div class="card">
          <div class="card-image">
            <img src="../assets/images/randomimage.jpg">
          </div>
          <div class="card-content">
            <a class="card-item-name" href="/item/{{item.id}}">{{item.name}}</a>
          </div>
          <div class="card-action">
            <a class="btn btn-sm btn-danger" data-id="{{item.id}}">DELETE</a>
          </div>
        </div>
      </div>
    </div>



